<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MenuGame">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageView
        android:id="@+id/ivPlayerVsPlayer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/landing_page1"
        app:layout_constraintBottom_toBottomOf="@+id/tvPlayerVsPlayer"
        app:layout_constraintLeft_toLeftOf="@id/tvPlayerVsPlayer"
        app:layout_constraintRight_toRightOf="@id/tvPlayerVsPlayer"
        />

    <TextView
        android:id="@+id/tvPlayerVsPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Bermain suit dengan teman"
        app:layout_constraintBottom_toTopOf="@id/glCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/ivPlayerVsCom"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/landing_page2"
        app:layout_constraintTop_toBottomOf="@id/glCenter"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvPlayerVsCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bermain dengan Komputer"
        app:layout_constraintTop_toBottomOf="@id/ivPlayerVsCom"
        app:layout_constraintLeft_toLeftOf="@id/ivPlayerVsCom"
        app:layout_constraintRight_toRightOf="@id/ivPlayerVsCom"
        />
</androidx.constraintlayout.widget.ConstraintLayout>